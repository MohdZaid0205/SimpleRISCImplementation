{
  "version": 3,

    "configurePresets": [
      {
        "name": "windows-debug",
        "displayName": "WIN Debug",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/Windows/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      },
      {
        "name": "windows-release",
        "displayName": "WIN Release",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/out/Windows/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      },
      {
        "name": "ubuntu-debug",
        "displayName": "WSL Debug",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/out/Ubuntu/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_C_COMPILER": "clang"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Linux"
        }
      },
      {
        "name": "ubuntu-release",
        "displayName": "WSL Release",
        "generator": "Unix Makefiles",
        "binaryDir": "${sourceDir}/out/Ubuntu/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_C_COMPILER": "clang"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Linux"
        }
      }
    ],

  "buildPresets": [
    {
      "name": "windows-debug-build",
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release-build",
      "configurePreset": "windows-release"
    },
    {
      "name": "ubuntu-debug-build",
      "configurePreset": "ubuntu-debug"
    },
    {
      "name": "ubuntu-release-build",
      "configurePreset": "ubuntu-release"
    }
  ]
}